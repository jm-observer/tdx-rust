{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tdx-test: 验证所有测试数据",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-run",
                "TestVerifyAll"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tdx-test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
